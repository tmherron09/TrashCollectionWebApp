@model TrashCollection.Models.Employee
@{
    ViewData["Title"] = "FinishRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Finish Registering</h1>

<h4>@Html.DisplayNameFor(model => model.EmailAddress)</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FinishRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="First name..." />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyName" class="control-label"></label>
                <input asp-for="FamilyName" class="form-control" placeholder="Family/Last name..."/>
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            <div class"form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="XXX-XXX-XXXX"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class"form-group">
                <label asp-for="AssignedZipCode" class="control-label"></label>
                <input asp-for="AssignedZipCode" class="form-control" placeholder="XXXXX"/>
                <span asp-validation-for="AssignedZipCode" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="FinishRegistration" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}