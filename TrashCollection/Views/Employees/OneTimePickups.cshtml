@model IEnumerable<OneTimePickup>

@{
    ViewData["Title"] = "OneTimePickups";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>One-Time Pickups</h1>
<h3>@ViewBag.ListFor</h3>



<table class="table">
    <thead>
        <tr>
            <th>
                Pickup Date
            </th>
            <th>
                Customer Address
            </th>
            <th>
                View On Map
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td>
                    <div class="alert alert-success">
                        <strong>No Currently Pending Pickups.</strong>
                    </div>
                </td>
            </tr>
        }
        else
        {

            @foreach (var item in Model)
            {
                var dateFormatted = item.PickUpDate.ToString("MM/dd");
                <tr>
                    <td>
                        @dateFormatted
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Address)
                    </td>
                    @*<td>
                            <form asp-action="ViewOnMap">
                                <input type="hidden" asp-for="@items[i]" />
                                <input type="submit" value="View On Map" class="btn btn-outline-secondary disabled">
                            </form>
                        </td>*@
                    <td>
                        <a asp-action="ViewOnMap" asp-route-id="@item.Id" class="btn btn-outline-danger">View On Map</a>
                    </td>
                    <td>
                        @*<form asp-action="PickupCompleted" method="post">
                                <div class="form-group">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input type="hidden" asp-for="@item.Id" />
                                    <input type="hidden" asp-for="@item.PickUpDate" />
                                    <input type="hidden" asp-for="@item.HasBeenPickedup" />
                                    <input type="hidden" asp-for="@item.CustomerId" />
                                    <input type="hidden" asp-for="@item.EmployeeId" />

                                    <input type="submit" value="Confirm Pickup" class="btn btn-outline-danger" />
                                </div>
                            </form>*@

                        <a asp-action="PickupCompleted" asp-route-id="@item.Id" class="btn btn-outline-danger">Confirm Pickup</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}