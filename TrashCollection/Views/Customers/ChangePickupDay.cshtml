@model TrashCollection.Models.Customer

@{
    ViewData["Title"] = "Change Trash Pickup Day";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Change Trash Pickup Day</h1>

<h4>Customer</h4>
<hr />
<div class="card mx-auto">
    <div class="card-header">
        <h3>Current Weekly Trash Pickup Day</h3>
        <h5><em>@Html.DisplayFor(model => model.WeeklyPickupDay)</em></h5>
    </div>
    <div class="card-body">
        <form asp-action="ChangePickupDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class"form-group">
                <label asp-for="WeeklyPickupDay" class="control-label"></label>
                <select asp-for="WeeklyPickupDay" class="form-control">
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                    <option value="Saturday">Saturday</option>
                    <option value="Sunday">Sunday</option>
                </select>
                <span asp-validation-for="WeeklyPickupDay" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

